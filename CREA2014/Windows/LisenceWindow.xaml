<Window x:Class="CREA2014.Windows.LisenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="SingleBorderWindow" 
        Height="400" Width="600">
    <DockPanel>
        <TextBlock x:Name="tbDescription" DockPanel.Dock="Top" Margin="20,10,20,0" TextWrapping="Wrap"></TextBlock>
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="0,10,0,10" Orientation="Horizontal">
            <Button x:Name="bAgree" Width="100" Margin="5,2" Click="bAgree_Click" ></Button>
            <Button x:Name="bDisagree" Width="100" Margin="5,2" IsCancel="True" Click="bDisagree_Click"></Button>
        </StackPanel>
        <TextBox x:Name="tLisence" Margin="30,10" IsReadOnly="True" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap"></TextBox>
    </DockPanel>
</Window>